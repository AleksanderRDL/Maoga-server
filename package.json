{
  "name": "maoga-backend",
  "version": "0.1.0",
  "description": "Backend server for Maoga",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently -n backend,frontend \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "npm run test:backend",
    "test:unit": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/unit --timeout 10000 --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/integration --timeout 10000 --exit",
    "test:user": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/**/*user* --timeout 10000 --exit",
    "test:game": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/**/*game* --timeout 10000 --exit",
    "test:admin": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/**/*admin* test/**/*report* --timeout 10000 --exit",
    "test:matchmaking": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test/**/*match* --timeout 15000 --exit",
    "validate:matchmaking": "node scripts/validate-matchmaking.js",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
    "migrate": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:create": "migrate-mongo create",
    "dev:backend": "nodemon src/server.js",
    "dev:frontend": "npm --prefix frontend run dev",
    "test:backend": "cross-env NODE_ENV=test mocha --require test/setup.js --recursive test --timeout 10000 --exit",
    "docker:test": "docker compose --profile test up --build --abort-on-container-exit tests",
    "lint:backend": "eslint src/**/*.js",
    "lint:frontend": "npm --prefix frontend run lint",
    "build:frontend": "npm --prefix frontend run build",
    "build": "npm run build:frontend",
    "postinstall": "npm --prefix frontend install"
  },
  "keywords": [
    "gaming",
    "matchmaking",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Maoga Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^4.28.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "migrate-mongo": "^10.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "ioredis-mock": "^5.8.0",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1",
    "socket.io-client": "^4.6.1",
    "supertest": "^6.3.3"
  }
}

