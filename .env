# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/maoga_dev

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-12345-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-67890-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Logging Configuration
LOG_LEVEL=debug

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:5173

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_URL=redis://127.0.0.1:6379
REDIS_ALLOW_MOCK_FALLBACK=true

# Database fallbacks
DB_ALLOW_IN_MEMORY_FALLBACK=true
MONGODB_MEMORY_DB_NAME=maoga_dev_memory

# IGDB API Configuration
IGDB_CLIENT_ID=igdb-client-id
IGDB_CLIENT_SECRET=igdb-client-secret

# Jobs Configuration
GAME_SYNC_INTERVAL=86400000
GAME_SYNC_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_MAX_HTTP_BUFFER_SIZE=1000000

# Notification Configuration
NOTIFICATION_CLEANUP_DAYS=30
NOTIFICATION_PUSH_BATCH_SIZE=10
NOTIFICATION_EMAIL_BATCH_SIZE=5

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT='{
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "your-private-key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
  "client_email": "firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com",
  "client_id": "your-client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com"
}'

# Email Configuration
EMAIL_FROM=noreply@maoga.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# App Configuration
APP_NAME=Maoga
APP_URL=http://localhost:3000
